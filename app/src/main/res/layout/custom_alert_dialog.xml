<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/custom_alert_background"
    android:gravity="center">

    <ImageView
        android:id="@+id/ivIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_alert_success"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/opensans_bold"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Are you sure you want to proceed?"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="@font/opensans_regular"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnNo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="No"
            android:textColor="@color/white"
            android:backgroundTint="@color/danger_main"
            android:fontFamily="@font/opensans_bold"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnYes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Yes"
            android:textColor="@color/white"
            android:backgroundTint="@color/success_main"
            android:fontFamily="@font/opensans_bold"
            android:layout_marginStart="8dp" />

        <Button
            android:id="@+id/btnOk"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="OK"
            android:textColor="@color/white"
            android:backgroundTint="@color/primary_main"
            android:fontFamily="@font/opensans_bold"
            android:layout_marginStart="8dp"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>
