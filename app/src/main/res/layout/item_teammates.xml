<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingVertical="8dp"
    android:paddingHorizontal="16dp"
    android:layout_marginBottom="15dp"
    android:elevation="2dp"
    android:background="@drawable/background_all_rounded"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/iv_teammate_avatar"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:src="@drawable/img_user"
        android:layout_marginEnd="16dp"/>

    <TextView
        android:id="@+id/tv_teammate_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/txt_teammates"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/opensans_semibold"/>

    <ImageButton
        android:id="@+id/btn_remove_teammate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_x_circle"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/txt_remove_teammate"
        app:tint="@color/danger_main" />
</LinearLayout>
