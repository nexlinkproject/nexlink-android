<?xml version="1.0" encoding="utf-8"?>
<MotionScene
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
       <KeyFrameSet>
       </KeyFrameSet>
        <OnSwipe motion:dragDirection="dragLeft" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:layout_height="200dp"
            android:layout_marginTop="36dp"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:id="@+id/title_onboard1"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" />
        <Constraint
            android:layout_width="344dp"
            android:layout_height="250dp"
            motion:layout_constraintTop_toBottomOf="@+id/title_onboard1"
            android:layout_marginTop="24dp"
            android:id="@+id/vector_onboard1"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="0dp"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="51dp" />
        <Constraint
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="60dp"
            android:id="@+id/teks_onboard1"
            android:layout_marginEnd="0dp" />
        <Constraint
            android:id="@+id/dots_container"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            motion:layout_constraintStart_toStartOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/title_onboard1"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="36dp"
            motion:layout_constraintEnd_toStartOf="parent" />
        <Constraint
            android:id="@+id/vector_onboard1"
            android:layout_width="344dp"
            android:layout_height="250dp"
            motion:layout_constraintTop_toBottomOf="@+id/title_onboard1"
            android:layout_marginTop="24dp"
            motion:layout_constraintEnd_toStartOf="parent" />
        <Constraint
            android:id="@+id/teks_onboard1"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="60dp"
            motion:layout_constraintEnd_toStartOf="parent" />
        <Constraint
            android:layout_height="200dp"
            android:layout_marginTop="36dp"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            motion:layout_constraintStart_toStartOf="parent"
            android:id="@+id/title_onboard2"
            android:layout_marginStart="0dp"
            motion:layout_constraintEnd_toEndOf="parent" />
        <Constraint
            android:id="@+id/vector_onboard2"
            android:layout_width="344dp"
            android:layout_height="250dp"
            motion:layout_constraintTop_toBottomOf="@+id/title_onboard2"
            android:layout_marginTop="24dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="0dp"
            motion:layout_constraintEnd_toEndOf="parent" />
        <Constraint
            android:id="@+id/teks_onboard2"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="60dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent" />
        <Constraint
            android:id="@+id/dots_container"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            motion:layout_constraintStart_toStartOf="parent" />
    </ConstraintSet>
    <ConstraintSet
        android:id="@+id/last"
        motion:deriveConstraintsFrom="@+id/end" >
        <Constraint
            android:id="@+id/title_onboard2"
            android:layout_width="0dp"
            android:layout_height="200dp"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="36dp"
            motion:layout_constraintEnd_toStartOf="parent" />
        <Constraint
            android:id="@+id/vector_onboard2"
            android:layout_width="344dp"
            android:layout_height="250dp"
            motion:layout_constraintTop_toBottomOf="@+id/title_onboard2"
            android:layout_marginTop="24dp"
            motion:layout_constraintEnd_toStartOf="parent" />
        <Constraint
            android:id="@+id/teks_onboard2"
            motion:layout_constraintEnd_toStartOf="parent"
            android:layout_width="0dp"
            android:layout_height="150dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="60dp" />
        <Constraint
            android:id="@+id/title_onboard3"
            android:layout_width="0dp"
            android:layout_height="200dp"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="36dp"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" />
        <Constraint
            android:id="@+id/vector_onboard3"
            android:layout_width="344dp"
            android:layout_height="250dp"
            motion:layout_constraintTop_toBottomOf="@+id/title_onboard3"
            android:layout_marginTop="24dp"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="0dp"
            motion:layout_constraintStart_toEndOf="@+id/vector_onboard1" />
        <Constraint
            android:id="@+id/teks_onboard3"
            android:layout_width="0dp"
            android:layout_height="150dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="60dp"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" />
    </ConstraintSet>
    <Transition
        motion:constraintSetStart="@+id/end"
        motion:constraintSetEnd="@+id/last" >
        <OnSwipe motion:dragDirection="dragLeft" />
    </Transition>
</MotionScene>